{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://geodis.example/schema/scenario.schema.json",
  "title": "GEODIS Picker Training - Scenario Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "id", "mode", "buildCart", "pickTasks"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "id": { "type": "string", "minLength": 1 },
    "mode": {
      "type": "string",
      "enum": ["guided", "assisted", "timed", "certification"]
    },
    "rulesetVersion": { "type": "string", "minLength": 1 },
    "seed": { "type": "integer", "minimum": 0  , "maximum": 100 },
    "buildCart": {
      "type": "object",
      "additionalProperties": false,
      "required": ["requiredToteCount"],
      "properties": {
        "requiredToteCount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50
        }
      }
    },
    "pickTasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "pickTaskId",
          "locationCode",
          "itemBarcode",
          "expectedToteSlot",
          "quantityRequired"
        ],
        "properties": {
          "pickTaskId": { "type": "string", "minLength": 1 },
          "locationCode": { "type": "string", "minLength": 1 },
          "itemBarcode": { "type": "string", "minLength": 1, "maxLength": 200 },
          "expectedToteSlot": { "type": "integer", "minimum": 1, "maximum": 50 },
          "quantityRequired": { "type": "integer", "minimum": 1, "maximum": 999 },
          "notes": { "type": "string", "maxLength": 500 }
        }
      }
    }
  }
}
